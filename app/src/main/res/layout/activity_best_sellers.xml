<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.BestSellersActivity">

    <include
        layout="@layout/items_toolbar"
        android:id="@+id/toolbar"
        />

    <TextView
        android:id="@+id/tw_static"
        android:text="@string/searched"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/grey_meli"
        />

    <TextView
        android:id="@+id/tw_searched"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="104dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/grey_meli"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:paddingVertical="12dp" />

</RelativeLayout>